<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity"
    android:background="#79BABA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ll_id">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/sv_id">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/rl_signup_id">


    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image_id"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/profile"
        app:civ_border_width="2dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        app:civ_border_color="#FF000000"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_upload_id"
        android:text="Upload"
        android:textStyle="bold"
        android:layout_toRightOf="@id/profile_image_id"
        android:layout_marginTop="100dp"/>


    <EditText
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:id="@+id/et_first_name_id"
    android:hint="First Name"
    android:layout_marginTop="200dp"
    android:layout_marginStart="30dp"
    android:paddingRight="50dp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_second_name_id"
        android:hint="Second Name"
        android:layout_below="@id/et_first_name_id"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:paddingRight="30dp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/et__email_id"
        android:hint="Enter Email"
        android:layout_below="@id/et_second_name_id"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:paddingRight="50dp"
        android:inputType="textEmailAddress"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_username_id"
        android:hint="Username"
        android:layout_below="@id/et__email_id"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:paddingRight="50dp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_number_id"
        android:hint="Phone Number"
        android:layout_below="@id/et_username_id"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:paddingRight="50dp"
        android:inputType="number"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_new_password_id"
        android:hint="New password"
        android:layout_below="@id/et_number_id"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:paddingRight="80dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_confirm_password_id"
        android:hint="Confirm password"
        android:layout_below="@id/et_new_password_id"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:paddingRight="50dp"/>

        <Button
            android:id="@+id/bt_create_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_confirm_password_id"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/et_confirm_password_id"
            android:text="Create"
            android:textColor="#0413FC"
            android:textStyle="bold" />


    </RelativeLayout>

        </ScrollView>

    </LinearLayout>



</RelativeLayout>